{% extends "/base.twig" %}

{% block head %}
	<link rel="stylesheet" href="/css/home.css">
{% endblock %}

{% block title %}
	<title>TeamSync - Inscription</title>
{% endblock %}

{% block content %}
	{% include "/layouts/headerHome.twig" %}
	<section class="h-screen mx-auto flex justify-center items-center text-gray-600 body-font">
		<div class="relative mb-12 lg:mb-0">
			<div id="radius-shape-1" class="absolute rounded-full shadow-lg"></div>
			<div id="radius-shape-2" class="absolute shadow-lg"></div>
			<div class="relative bg-[hsla(0,0%,100%,0.9)] backdrop-blur-[25px] backdrop-saturate-[200%] block rounded-lg px-6 py-12 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] md:px-12">
				<h2 class="text-center text-gray-900 text-lg font-medium title-font mb-5">S'inscrire</h2>
				<form action="/inscription" method="POST">
					<div class="relative mb-4">
						<label for="name" class="leading-7 text-sm text-gray-600">Raison sociale</label>
						<input type="text" id="name" name="name" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
						<p class="mt-3 text-red-600">{{ error.name.message }}</p>
					</div>
					<div class="relative mb-4">
						<label for="email" class="leading-7 text-sm text-gray-600">Email</label>
						<input type="email" id="email" name="email" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
						<p class="mt-3 text-red-600">{{ error.email.message }}</p>
					</div>
					<div class="relative mb-4">
						<label for="siret" class="leading-7 text-sm text-gray-600">Numéro SIRET</label>
						<input type="number" id="siret" name="siret" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
						<p class="mt-3 text-red-600">{{ error.siret.message }}</p>
					</div>
					<div class="relative mb-4">
						<label for="directeur" class="leading-7 text-sm text-gray-600">Nom du directeur</label>
						<input type="text" id="directeur" name="directeur" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
						<p class="mt-3 text-red-600">{{ error.directeur.message }}</p>
					</div>
					<div class="relative mb-4">
						<label for="password" class="leading-7 text-sm text-gray-600">Mot de passe</label>
						<input type="password" id="password" name="password" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
						<p class="mt-3 text-red-600">{{ error.password.message }}</p>
					</div>
					<button type="submit" class="w-full text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Valider</button>
				</form>
				<p class="text-xs text-gray-500 mt-3">Veuillez remplir tous les champs pour compléter votre inscription.</p>
			</div>
		</div>
	</section>
{% endblock %}
