{% extends "/base.twig" %}

{% block head %}
	<link rel="stylesheet" href="/css/home.css">
{% endblock %}

{% block title %}
	<title>TeamSync - Accueil</title>
{% endblock %}

{% block content %}
	<body>
		<header class="md:relative text-gray-700 body-font">
			<div class="md:fixed top-0 left-0 right-0 container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center border-b border-gray-300">
				<a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/" target="_blank">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewbox="0 0 24 24">
						<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
					</svg>
					<span class="ml-3 text-xl">Team.Sync</span>
				</a>
				<nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
					<a class="md:mr-8 hover:text-gray-900 cursor-pointer" href="/">Accueil</a>
					<a class="md:mr-8 hover:text-gray-900 cursor-pointer" href="/about">À propos</a>
					<a class="md:mr-8 hover:text-gray-900 cursor-pointer" href="/contact">Contact</a>
				</nav>
				<a class="inline-flex items-center bg-gray-500 border-0 py-2 px-4 focus:outline-none hover:bg-gray-700 rounded text-white mt-4 md:mt-0" href="/login">Mon compte
					<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewbox="0 0 24 24">
						<path d="M5 12h14M12 5l7 7-7 7"></path>
					</svg>
				</a>
			</div>
		</header>

		<section class="text-gray-600 body-font">
			<div class="container h-screen mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
				<div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
					<img class="object-cover object-center rounded" alt="hero" src="/img/rh-img.png">
				</div>
				<div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
					<h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Bienvenue sur
						<br class="hidden lg:inline-block"><span class="text-indigo-500">Team.Sync</span>
					</h1>
					<p class="mb-8 leading-relaxed">La plateforme qui vous permet de gérer efficacement vos employés en toute simplicité !</p>
					<div class="flex justify-center">
						<a class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" href="/register">S'inscrire</a>
						<a class="ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded text-lg" href="/login">Se connecter</a>
					</div>
				</div>
			</div>
		</section>

	</body>
{% endblock %}

{% block scripts %}
	<script src="/js/home.js"></script>
{% endblock %}