{% extends "/base.twig" %}

{% block head %}
	<link rel="stylesheet" href="/css/dashboard.css">
{% endblock %}

{% block title %}
	<title>TeamSync - Tableau de bord</title>
{% endblock %}

{% block content %}
	<body class="bg-gray-100">
		<header class="text-gray-700 body-font">
			<div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center border-b border-gray-200">
				<a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/" target="_blank">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewbox="0 0 24 24">
						<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
					</svg>
					<span class="ml-3 text-xl">Team.Sync</span>
				</a>
				<p class="mx-auto">Bienvenue sur votre tableau de bord
					{{user.name}}
				</p>
				<nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
					<a class="md:mr-8 hover:text-gray-900 cursor-pointer" href="/">Accueil</a>
				</nav>
				<a class="inline-flex items-center bg-red-400 border-0 py-2 px-4 focus:outline-none hover:bg-red-600 rounded text-white mt-4 md:mt-0" href="/logout" target="_blank">Déconnexion
					<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewbox="0 0 24 24">
						<path d="M5 12h14M12 5l7 7-7 7"></path>
					</svg>
				</a>
			</div>
		</header>

		<div
			class="mx-auto container flex flex-wrap gap-5 items-start justify-center mt-20">
			{# Carte vide pour ajouter un projet #}
			<div id="addEmployeeCard" class="addEmployeeCard w-52 h-56 flex flex-col justify-center items-center bg-white border border-gray-200 rounded-lg hover:shadow-md">
				<svg class="w-20 h-20 text-gray-400 cursor-pointer" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
					<path clip-rule="evenodd" fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v2.5h-2.5a.75.75 0 000 1.5h2.5v2.5a.75.75 0 001.5 0v-2.5h2.5a.75.75 0 000-1.5h-2.5v-2.5z"></path>
				</svg>
			</div>

			{% include "/layouts/addEmployee.twig" %}
			{% include "/layouts/editEmployee.twig" %}

			{# Carte employés #}
			{% for employe in employes %}
				{% include "/layouts/deleteModal.twig" %}
				<div class="relative w-52 min-h-fit bg-white border border-gray-200 rounded-lg hover:shadow-md">
					<div class="flex justify-end px-4 pt-4">
						<button class="dropdownButton inline-block text-gray-500 hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg text-sm p-1.5" data-dropdown-toggle="dropdown" type="button">
							<span class="sr-only">Open dropdown</span>
							<svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
								<path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"></path>
							</svg>
						</button>
						<!-- Dropdown menu -->
						<div class="dropdown shadow-md z-10 hidden text-base list-none bg-white divide-y divide-gray-100 rounded-lg w-44">
							<ul class="py-2" aria-labelledby="dropdownButton">
								<li>
									<div data-employee='{{employe | json_encode | escape}}' data-employeeid={{employe.id}} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 cursor-pointer" onclick="openModalModify(this)">Modifier</div>
								</li>
								<li>
									<a href="/deleteEmploye/{{employe.id}}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" onclick="addBlame(event)">Blâmer</a>
								</li>
								<li>
									<a href="#" data-employeeId={{employe.id}}  class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-100" onclick="confirmDelete(this)">Supprimer</a>
								</li>
							</ul>
						</div>
					</div>
					<div class="flex flex-col items-center px-4 pb-4">
						<img class="w-24 h-24 mb-3 rounded-full shadow-lg object-cover" src="/photo/{{employe.photo}}" alt="{{employe.nom}}"/>
						<h5 class="mb-1 text-xl font-medium text-gray-900">{{employe.nom}}</h5>
						<span class="text-sm text-gray-500">{{employe.fonction}}</span>
						<span class="blame absolute flex items-center justify-center top-4 left-4 w-8 h-8 rounded-full ring-1 ring-gray-300">0</span>
					</div>
				</div>
			{% endfor %}
		</div>

	</body>
{% endblock %}

{% block script %}
	<script src="/js/dashboard.js"></script>
{% endblock %}
